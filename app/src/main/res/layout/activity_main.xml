<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:id="@+id/activityMain"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/howButton"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/applebuttongreen"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="How to Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toEndOf="@+id/authorButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applebuttongreen" />

    <Button
        android:id="@+id/authorButton"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/applebuttongreen"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="About Author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applebuttongreen" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/applebutton"
        android:text="PLAY!"
        android:textSize="21sp"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorButton"
        app:srcCompat="@drawable/applebutton" />

    <Button
        android:id="@+id/scoreButton"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/applebuttongreen"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="High Score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/howButton"
        app:srcCompat="@drawable/applebuttongreen" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/applebutton"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="Exit Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreButton"
        app:srcCompat="@drawable/applebutton" />

</androidx.constraintlayout.widget.ConstraintLayout>